{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "typeRoots": ["types.d.ts", "./node_modules/@types"],
    /* Linting */
    "noFallthroughCasesInSwitch": true
  },
  "include": ["*.ts", "../server"]
}
